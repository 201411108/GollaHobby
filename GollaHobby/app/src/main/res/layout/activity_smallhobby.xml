<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3397BCE4"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SmallHobbyAcitivty">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3397BC24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHobby"
            android:layout_width="wrap_content"
            android:layout_height="169dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/flowerarrangement" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="꽃꽂이"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHobby"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="serif"
            android:lineSpacingExtra="14sp"
            android:textColor="#000000"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="282dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:text="-> 자세한 취미설명을 원하시면 클릭하세요."
            android:textColor="#F71010" />

        <Button
            android:id="@+id/btnBack"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_login"
            android:text="Back"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="COPYRIGHT. 2020. GOLLAHOBBY. ALL RIGHTS RESERVED."
        android:textSize="10sp" />

</LinearLayout>